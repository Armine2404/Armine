<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= film.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/films/<%= film._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="film[name]" value="<%= film.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="film[image]" value="<%= film.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="film[price]" value ="<%= film.price %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="film[description]" value="<%= film.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/films">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>