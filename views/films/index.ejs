<% include ../partials/header %>
 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Best Films WebPage!</h1>
             <p>View The Best Films of Over The World</p>
             <p>
                <a class="btn btn-primary btn-large" href="/films/new">Add New film</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% films.forEach(function(film){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= film.image %>">
                   <div class="caption">
                       <h4><%= film.name %></h4>
                   </div>
                   <p>
                       <a href="/films/<%= film._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>